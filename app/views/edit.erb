<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <p>Updated Article Title: <input type="text" name="title"></p>
    <p>Updated Content: <input type="text" name="content"></p>
    
    <input type="submit" id="submit" value="Edit Article">
</form>